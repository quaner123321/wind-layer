{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@8.6.5",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "turbo run dev --filter='./packages/*'",
    "build": "turbo run build --filter='./packages/*'",
    "build:minify": "turbo run build:minify --filter='./packages/*'",
    "playground": "turbo run dev --filter=playground",
    "docs": "pnpm run docs:dev",
    "api": "turbo run api --filter='./packages/*'",
    "docs:dev": "pnpm --filter docs run dev",
    "docs:build": "pnpm --filter docs run build",
    "docs:serve": "pnpm --filter docs run serve ",
    "version": "changeset version",
    "changeset": "changeset",
    "clear": "turbo run clear --filter='./packages/*'",
    "release": "pnpm build && pnpm build:minify && pnpm test-only && pnpm changeset publish",
    "lint": "turbo run lint --filter='./packages/*'",
    "prettier": "prettier --parser=typescript --write **/*.{js,ts,md}",
    "test": "turbo run test --filter='./packages/*'",
    "test-only": "turbo run test-only --filter='./packages/*'",
    "coverage": "turbo run coverage --filter='./packages/*'"
  },
  "devDependencies": {
    "@aurorafe/eslint-config-base": "^1.1.0",
    "@aurorafe/eslint-config-ts": "^1.1.0",
    "@aurorafe/eslint-config-vue": "^1.1.0",
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.0",
    "@types/node": "^18.6.4",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitest/coverage-v8": "^1.4.0",
    "canvas": "^2.10.2",
    "jsdom": "^22.1.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^1.12.5",
    "terser": "^5.30.3",
    "typescript": "^5.4.4",
    "typedoc": "^0.25.12",
    "typedoc-plugin-markdown": "^3.17.1",
    "typedoc-plugin-not-exported": "^0.1.6",
    "vue": "^3.2.41",
    "vitest": "^1.4.0",
    "vitepress": "^1.0.2",
    "wait-for-expect": "3.0.2",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "rollup": "^4.14.1",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-glslify": "^1.3.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "rollup-plugin-sourcemaps": "^0.6.3"
  },
  "engines": {
    "node": ">= 14.18.1",
    "npm": ">= 6.14.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run lint",
      "pre-push": "pnpm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "license": "MIT",
  "name": "wind-layer",
  "description": "a [maptalks](https://maptalks.org/) | [mapbox-gl](https://github.com/mapbox/mapbox-gl-js) | [openlayers](http://openlayers.org) | [leaflet](https://leafletjs.com/) | [bmap](https://map.baidu.com/) | [amap](https://ditu.amap.com/)\r extension to show wind fieldã€‚",
  "version": "1.0.0",
  "main": ".prettierrc.js",
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "dependencies": {
    "eslint-compat-utils": "^0.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-custom-alias": "^1.3.2",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-module-utils": "^2.8.1",
    "eslint-plugin-html": "^8.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsonc": "^2.15.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-vue": "^9.25.0",
    "eslint-plugin-vuejs-accessibility": "^1.2.0",
    "eslint-scope": "^7.2.2",
    "eslint-visitor-keys": "^3.4.3",
    "jsonc-eslint-parser": "^2.4.0",
    "prettier-linter-helpers": "^1.0.0",
    "vue-eslint-parser": "^9.4.2"
  },
  "author": ""
}
